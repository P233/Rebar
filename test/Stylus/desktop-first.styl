
$mobile-first = false;

// # Containers
$container = {
  ".container": {},
  ".container-gutter": {gutter: true},
  ".container-nested": {nested: true},
  ".container-width": {width: 900px 600px 300px 100px},
  ".container-max-width": {max-width: 1280px},
  ".container-min-width": {min-width: 600px}
};

// # Grids
$grid = {
  ".grid-float": {
    width: 1/3,
    float: right left null right
  },
  ".grid-offset-left": {
    width: 1/2,
    offset-left: 1/4 30px 0
  },
  ".grid-offset-right": {
    width: 1/2,
    float: right,
    offset-right: 1/4 30px 0
  },
  ".grid-gutter-left": {
    width: 1/2,
    gutter-left: 30px 5% null 0
  },
  ".grid-gutter-right": {
    width: 1/2,
    gutter-right: 30px .05 null 0
  },
  ".grid-width": {
    width: 1/4 .5 1
  },
  ".grid-max-width": {
    max-width: 800px
  },
  ".grid-container": {
    width: 2/3,
    container: true
  },


  ".grid-offset-only": {
    offset-left: 1/3 30px 0
  },
  ".more, .than, .one, .selectors": {
    width: 1/2
  }
};

@import '../../rebar.styl';

/* slicer */

body
  +slicer(-1)
    opacity 1
  +slicer(1)
    opacity 1
    &:before
      content "slice 1"
  +slicer(-2)
    opacity 1
  +slicer(2)
    opacity 1
    &:before
      content "slice 2"
  +slicer(-3)
    opacity 1
  +slicer(3)
    opacity 1
    &:before
      content "slice 3"
  +slicer(1, -2)
    opacity 1
  +slicer(2, -3)
    opacity 1
  +slicer(1, -3)
    opacity 1

@media screen and (max-device-width: query-breakpoint(1)) and (min-device-width: query-breakpoint(-3))
  body
    opacity 1


#css:after
  content: 'Stylus desktop first'
